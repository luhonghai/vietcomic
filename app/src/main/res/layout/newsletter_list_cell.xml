<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="8dp">

    <FrameLayout
        android:id="@+id/frm_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp">

        <ImageView
            android:id="@+id/img_pdf_newsletter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_pdf"></ImageView>

        <com.cmg.android.pension.view.CoverView
            android:id="@+id/cover_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.cmg.android.pension.view.CoverView>
    </FrameLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="5dp"
            android:stretchColumns="1">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/newsletter_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:padding="4sp"
                    android:scrollbars="vertical"
                    android:text="TextView"
                    android:textColor="@color/bp_newsletter_title"
                    android:textSize="20sp" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/newsletter_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_span="2"
                    android:text="22/12/2013"
                    android:textColor="@color/bp_newsletter_date" />
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/newsletter_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="50"
                    android:lines="5"
                    android:scrollbars="vertical"
                    android:text="Medium Text"
                    android:textColor="@color/bp_newsletter_description" />
            </TableRow>
        </TableLayout>
    </FrameLayout>

</LinearLayout>