<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:layout_margin="10dp"
    android:background="@drawable/item_shadow_background"
    >
    <ImageView
        android:id="@+id/thumbnail"
        android:background="@drawable/drop_shadow_64_88"
        android:src="@drawable/comic_thumbnail_default"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:layout_width="64dp"
        android:layout_height="88dp" />
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">
            <TextView
                android:id="@+id/txtName"
                android:textColor="#FF000000"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.SearchResult.Title"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="test"
                android:layout_height="0dp" />
            <LinearLayout
                android:id="@+id/llRateStar"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/icon_book_star_image_size"
                    android:layout_height="@dimen/icon_book_star_image_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/app_icon_star_empty_red"/>
                <ImageView
                    android:layout_width="@dimen/icon_book_star_image_size"
                    android:layout_height="@dimen/icon_book_star_image_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/app_icon_star_empty_red"/>
                <ImageView
                    android:layout_width="@dimen/icon_book_star_image_size"
                    android:layout_height="@dimen/icon_book_star_image_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/app_icon_star_empty_red"/>
                <ImageView
                    android:layout_width="@dimen/icon_book_star_image_size"
                    android:layout_height="@dimen/icon_book_star_image_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/app_icon_star_empty_red"/>
                <ImageView
                    android:layout_width="@dimen/icon_book_star_image_size"
                    android:layout_height="@dimen/icon_book_star_image_size"
                    android:scaleType="centerCrop"
                    android:src="@drawable/app_icon_star_empty_red"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>